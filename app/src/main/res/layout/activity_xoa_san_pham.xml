<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/anh_nen_frag1"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".XoaSanPham">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:text="Xóa Sản Phẩm"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/white"
            />

        <LinearLayout

            android:padding="12dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn sản phẩm"
                android:layout_marginBottom="6dp"
                android:textSize="16dp"
                android:textColor="@color/white"
                />
            <Spinner
                android:padding="12dp"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/vie_bg"
                android:scrollbarSize="@dimen/cardview_default_radius"
                android:id="@+id/spinner"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:textSize="16dp"
                android:textColor="@color/white"
                />
            <TextView
                android:textSize="16dp"
                android:id="@+id/tvTenSP"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:hint="Tên Sản Phẩm"
                android:background="@drawable/vie_bg"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá sản phẩm"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="16dp"
                android:textSize="16dp"
                android:textColor="@color/white"
                />
            <TextView
                android:textSize="16dp"

                android:id="@+id/tvGiaSP"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:hint="Giá Sản Phẩm"
                android:background="@drawable/vie_bg"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:text="Đồng ý"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:id="@+id/btnDongY"
                    android:background="@drawable/button_bg"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hủy"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:id="@+id/btnHuy"
                    android:background="@drawable/button_bg"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>