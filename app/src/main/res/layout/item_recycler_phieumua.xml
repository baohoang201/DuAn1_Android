<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemHoaDon"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#FF7F26"
        app:cardCornerRadius="20dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#FF7F26"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:id="@+id/imgHoaDon"
                android:background="@drawable/background"
                android:layout_height="70dp"
                android:src="@drawable/the_coffee_house_logo"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="7dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvIDHoaDon"
                    android:textColor="@color/black"
                    android:hint="Đơn hàng số"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:id="@+id/tvTongTienHoaDon"
                    android:hint="Tổng tiền"/>
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/tvNgayThanhToanHoaDon"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:hint="Ngày mua"/>

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>